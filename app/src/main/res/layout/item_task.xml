<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:drawable/editbox_background"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <!-- Верхняя часть: чекбокс + текст -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Чекбокс для отметки выполнения -->
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp" />

        <!-- Контейнер для текста -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Название задачи -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заголовок задачи"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Дата и время задачи -->
            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13.02.2026 18:30"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="12dp" />

    <!-- Нижняя часть: оповестить + шкала -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Текст "Оповестить:" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оповестить:"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginEnd="8dp" />

        <!-- Выпадающий список -->
        <Spinner
            android:id="@+id/reminderSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Шкала прогресса (сколько осталось времени) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <!-- Текст с оставшимся временем -->
        <TextView
            android:id="@+id/timeRemainingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Осталось: 2 дня 5 часов"
            android:textSize="13sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="4dp" />

        <!-- Полоса прогресса -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="60"
            android:max="100"
            android:progressTint="#4CAF50" />

    </LinearLayout>

</LinearLayout>